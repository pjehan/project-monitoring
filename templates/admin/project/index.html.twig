{% extends 'admin/base.html.twig' %}

{% block title %}Projects{% endblock %}

{% block body %}
    <div class="container">
        <h1>Projects</h1>

        <a href="{{ path('admin_project_new') }}" class="btn btn-primary">
            <i class="far fa-plus"></i>
            Create new
        </a>

        <table class="table">
            <thead>
            <tr>
                <th>Name</th>
                <th>Date Start</th>
                <th>Date End</th>
                <th>Hours</th>
                <th>Cost Per Hour</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for project in projects %}
                <tr>
                    <td>{{ project.name }}</td>
                    <td>{{ project.dateStart|date('Y-m-d') }}</td>
                    <td>{{ project.dateEnd ? project.dateEnd|date('Y-m-d') : '' }}</td>
                    <td>{{ project.hours }}</td>
                    <td>{{ project.costPerHour }}</td>
                    <td>
                        <a href="{{ path('admin_project_show', {'id': project.id}) }}" class="btn btn-secondary">
                            <i class="far fa-eye"></i>
                            Show
                        </a>
                        <a href="{{ path('admin_project_edit', {'id': project.id}) }}" class="btn btn-primary">
                            <i class="far fa-edit"></i>
                            Edit
                        </a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="7">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
